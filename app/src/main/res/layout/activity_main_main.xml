<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w"
        android:background="@color/colorTheme"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/main_menu1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="7%w"
            app:layout_heightPercent="7%w"
            app:layout_marginLeftPercent="4%w"
            style="@style/MyImageStyle"
            android:src="@drawable/main_menu"/>
        <ImageView
            android:id="@+id/main_music"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="12%w"
            app:layout_heightPercent="12%w"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:src="@drawable/music_select"/>
        <ImageView
            android:id="@+id/main_wen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="12%w"
            app:layout_heightPercent="12%w"
            style="@style/MyImageStyle"
            android:layout_toLeftOf="@+id/main_music"
            app:layout_marginRightPercent="4%w"
            android:src="@drawable/wen_select"/>
        <ImageView
            android:id="@+id/main_friend"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="12%w"
            app:layout_heightPercent="12%w"
            style="@style/MyImageStyle"
            android:layout_toRightOf="@+id/main_music"
            app:layout_marginLeftPercent="4%w"
            android:src="@drawable/friend_select"/>



    </com.zhy.android.percent.support.PercentRelativeLayout>
   <FrameLayout
       android:id="@+id/main_content"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   </FrameLayout>




</com.zhy.android.percent.support.PercentLinearLayout>
