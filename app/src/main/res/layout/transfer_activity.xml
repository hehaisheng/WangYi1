<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fengxiang_activity_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="90%h">

    </android.support.v7.widget.RecyclerView>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/fengxiang_activity_linear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="10%h"
        android:background="@color/newback"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/has_select"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="30%w"
            android:text="已选"
            app:layout_marginLeftPercent="10%w"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:background="@drawable/shape_back"
            android:gravity="center"
            android:padding="3dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/to_fengxiang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="30%w"
            android:text="快传"
            android:padding="3dp"
            android:layout_gravity="center_vertical"
            app:layout_marginLeftPercent="20%w"
            android:textColor="@color/colorWhite"
            android:background="@drawable/shape_back"
            android:gravity="center"
            android:textSize="20sp"/>

    </com.zhy.android.percent.support.PercentLinearLayout>
   

</com.zhy.android.percent.support.PercentLinearLayout>
