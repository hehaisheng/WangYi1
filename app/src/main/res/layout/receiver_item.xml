<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="8dp"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_height="47dp"
        android:layout_width="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        >

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <TextView
                android:id="@+id/receiver_item_name"
                android:layout_width="0dp"
                app:layout_widthPercent="75%w"
                android:layout_height="0dp"
                app:layout_heightPercent="8%w"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:text="天黑黑"
                android:textColor="@color/text_common"
                app:layout_textSizePercent="4%w"
                app:layout_paddingLeftPercent="2%w"

                />
            <TextView
                android:id="@+id/receiver_item_art"
                android:layout_width="0dp"
                app:layout_widthPercent="75%w"
                android:layout_height="0dp"
                app:layout_heightPercent="8%w"
                android:layout_below="@+id/receiver_item_name"
                android:gravity="center_vertical"
                android:text="孙燕姿"
                android:textColor="@color/text_common"
                app:layout_textSizePercent="3%w"
                app:layout_paddingLeftPercent="2%w"

                />

        </com.zhy.android.percent.support.PercentRelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
