<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:paddingLeft="2dp"
android:paddingRight="2dp"
android:paddingBottom="8dp"
android:gravity="center_horizontal"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical">

<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"

    >


    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/talk_item_user_name"
            android:layout_width="0dp"
            app:layout_widthPercent="99%w"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="爱的往事："
            android:textColor="@color/text_common"
            app:layout_textSizePercent="4%w"
            app:layout_paddingLeftPercent="1%w"
            app:layout_paddingTopPercent="1%w"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/talk_item_text"
            android:layout_width="0dp"
            app:layout_widthPercent="99%w"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="@string/ceshi"
            android:textColor="@color/text_common"
            app:layout_textSizePercent="4%w"
            app:layout_paddingPercent="1%w"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            />

    </com.zhy.android.percent.support.PercentLinearLayout>





</android.support.v7.widget.CardView>


</LinearLayout>
