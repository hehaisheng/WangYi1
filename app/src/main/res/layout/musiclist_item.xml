<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="57dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="4dp"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_height="52dp"
        android:layout_width="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        >

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <TextView
                android:id="@+id/music_item_name"
                android:layout_width="0dp"
                app:layout_widthPercent="75%w"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:text="@string/musicname"
                android:textColor="@color/text_common"
                app:layout_textSizePercent="4%w"
                app:layout_paddingLeftPercent="2%w"
                app:layout_paddingTopPercent="2%w"

                />
            <TextView
                android:id="@+id/music_item_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/music_item_name"
                android:gravity="center_vertical"
                android:text="@string/musicart"
                android:textColor="@color/text_common"
                app:layout_textSizePercent="3%w"
                app:layout_paddingLeftPercent="2%w"
                app:layout_paddingTopPercent="1%w"/>
            <TextView
                android:id="@+id/music_item_count"
                android:layout_width="0dp"
                app:layout_widthPercent="15%w"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="0"
                android:layout_alignTop="@+id/music_item_art"
                android:layout_toRightOf="@+id/music_item_art"
                android:textColor="@color/text_common"
                app:layout_textSizePercent="3%w"
                app:layout_paddingLeftPercent="3%w"
                app:layout_paddingTopPercent="1%w"

                />
            <ImageView
                android:id="@+id/music_item_image"
                android:layout_width="0dp"
                app:layout_widthPercent="8%w"
                android:layout_height="0dp"
                app:layout_heightPercent="8%w"
                android:layout_alignParentRight="true"
                app:layout_marginRightPercent="1%w"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:src="@drawable/music_normal"/>

        </com.zhy.android.percent.support.PercentRelativeLayout>





    </android.support.v7.widget.CardView>


</LinearLayout>
