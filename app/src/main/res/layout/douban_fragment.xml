<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/douban_gif"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="24%h"
        android:scaleType="fitXY"
        android:src="@drawable/headback"

       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/text_common"/>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="15%h"

        >
        <!--50%h是占上级容器的比例-->
        <Button
            android:id="@+id/douban_tucao"
            android:layout_width="0dp"
            app:layout_widthPercent="50%h"
            android:layout_height="0dp"
            app:layout_heightPercent="50%h"
            android:background="@drawable/redcircle"
            android:layout_centerInParent="true"
            android:textColor="@color/colorTheme"
            android:text="随文"
            app:layout_textSizePercent="20%h"

            />
        <Button
            android:id="@+id/douban_dawu"
            android:layout_width="0dp"
            app:layout_widthPercent="50%h"
            android:layout_height="0dp"
            app:layout_heightPercent="50%h"
            android:background="@drawable/redcircle"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="30%h"
            android:textColor="@color/colorTheme"
            android:text="小事"
            app:layout_textSizePercent="20%h"/>

        <Button
            android:id="@+id/douban_suiwen"
            android:layout_width="0dp"
            app:layout_widthPercent="50%h"
            android:layout_height="0dp"
            app:layout_heightPercent="50%h"
            android:background="@drawable/redcircle"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            app:layout_marginRightPercent="30%h"
            android:textColor="@color/colorTheme"
            android:text="鸡血"
            app:layout_textSizePercent="20%h"
            />




    </com.zhy.android.percent.support.PercentRelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/text_common"/>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="6%h"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            app:layout_widthPercent="8%w"
            android:layout_height="0dp"
            app:layout_heightPercent="8%w"
            android:src="@drawable/recommand"
            android:layout_gravity="center_vertical"
            app:layout_marginLeftPercent="2%w"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_heightPercent="8%w"
            android:text="推荐"
            android:textColor="@color/text_common"
            app:layout_textSizePercent="4%w"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            />

    </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="27%h"
        app:layout_marginLeftPercent="2%w"
        app:layout_marginRightPercent="2%w">
        <ImageView
            android:id="@+id/douban_middle_recommand"
            android:layout_width="0dp"
            app:layout_widthPercent="30%w"
            android:layout_height="0dp"
            app:layout_heightPercent="28%w"
            android:src="@drawable/roundback"
            android:scaleType="center"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/douban_left_recommand"
            android:layout_width="0dp"
            app:layout_widthPercent="30%w"
            android:layout_height="0dp"
            app:layout_heightPercent="28%w"
            android:src="@drawable/roundback"
            android:scaleType="center"
            android:layout_alignParentLeft="true"
            />
        <ImageView
            android:id="@+id/douban_right_recommand"
            android:layout_width="0dp"
            app:layout_widthPercent="30%w"
            android:layout_height="0dp"
            app:layout_heightPercent="28%w"
            android:src="@drawable/roundback"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/douban_middle_text"
            android:layout_width="0dp"
            app:layout_widthPercent="30%w"
            android:layout_height="0dp"
            app:layout_heightPercent="10%w"
            android:gravity="center_vertical"
            android:text="@string/ceshi"
            android:textColor="@color/text_common"
            app:layout_textSizePercent="3%w"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            android:ellipsize="end"

            android:layout_below="@+id/douban_middle_recommand"/>
        <TextView
            android:id="@+id/douban_left_text"
            android:layout_width="0dp"
            app:layout_widthPercent="30%w"
            android:layout_height="0dp"
            app:layout_heightPercent="10%w"
            android:gravity="center_vertical"
            android:text="@string/ceshi"
            android:textColor="@color/text_common"
            app:layout_textSizePercent="3%w"
            android:layout_alignLeft="@+id/douban_left_recommand"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_below="@+id/douban_left_recommand"/>
        <TextView
            android:id="@+id/douban_right_text"
            android:layout_width="0dp"
            app:layout_widthPercent="30%w"
            android:layout_height="0dp"
            app:layout_heightPercent="10%w"
            android:layout_below="@+id/douban_right_recommand"
            android:layout_alignLeft="@+id/douban_right_recommand"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:text="@string/ceshi"
            android:textColor="@color/text_common"
            app:layout_textSizePercent="3%w"
            android:maxLines="2"
            android:ellipsize="end"
            />


    </com.zhy.android.percent.support.PercentRelativeLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="35%w"
        app:layout_marginLeftPercent="2%w"
        app:layout_marginRightPercent="2%w"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/douban_bottom_recommand"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="28%w"
            android:background="@drawable/headback"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/douban_bottom_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_common"
            android:layout_gravity="center_vertical"
            android:text="@string/ceshi"
            app:layout_textSizePercent="4%w"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            app:layout_marginTopPercent="3%w"
            />

    </com.zhy.android.percent.support.PercentLinearLayout>







</com.zhy.android.percent.support.PercentLinearLayout>
