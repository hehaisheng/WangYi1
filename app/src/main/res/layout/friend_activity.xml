<?xml version="1.0" encoding="utf-8"?>
<com.example.pc_.wangyi.view.InputLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/friend_header"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <com.zhy.android.percent.support.PercentLinearLayout
       android:id="@+id/friend_linear"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/friend_title"
           android:layout_width="0dp"
           app:layout_widthPercent="87%w"
           android:layout_height="40dp"
           android:text="小圈圈"
           android:textSize="20sp"
           android:gravity="center_vertical"
           android:textColor="@color/colorWhite"
           android:padding="8dp"
           android:background="@color/colorTheme"/>
       <ImageView
           android:id="@+id/friend_createMessage"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:src="@drawable/friend_select"
           android:background="@color/colorTheme"
           android:scaleType="fitXY"
           android:paddingRight="5dp"
          />
   </com.zhy.android.percent.support.PercentLinearLayout>


    <ListView
        android:id="@+id/friend_activity"
        android:layout_below="@+id/friend_linear"
        android:layout_above="@+id/friend_send_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null">

    </ListView>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/friend_send_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/friend_talk_edit"
            android:layout_width="0dp"
            app:layout_widthPercent="80%w"
            android:layout_height="wrap_content"
            android:hint="乐读："
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:background="@drawable/shape_back"
            />
        <TextView
            android:id="@+id/friend_talk_send"
            android:layout_width="0dp"
            app:layout_widthPercent="19%w"
            app:layout_marginLeftPercent="1%w"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|right"
            android:text="发送"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:background="@drawable/shape_back"
            android:gravity="center"/>


    </com.zhy.android.percent.support.PercentLinearLayout>


</com.example.pc_.wangyi.view.InputLayout>
